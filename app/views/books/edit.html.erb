<div class="form">

	<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<h1>Editing Book</h1>

	<%= form_for(@book) do |f| %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %><br>

	<%= f.submit "Update Book" %>

	<% end %>

	<%= link_to "Show", book_path(@book) %>
	<%= link_to "Back", books_path %>
</div>