<%= flash[:notice] %>

<h2>Books</h2>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "are you sure?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<!-- 投稿部分　-->

<div class="form">

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h3>New book</h3>

<%= form_for(@book) do |f| %>
<P>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %><br>

<%= f.submit "Create Book" %>

<% end %>
</div>